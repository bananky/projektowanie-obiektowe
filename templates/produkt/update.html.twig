{% extends 'base.html.twig' %}

{% block title %}Aktualizuj produkt {{ product.name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Aktualizuj produkt {{ product.name }}</h1>
<form method="put" action="{{ path('zaktualizuj-produkt', {'id': product.id}) }}">
    <label for="name">Nowa nazwa produktu:</label><br>
    <input type="text" id="name" name="name" value="{{ product.name }}"><br>
    <label for="price">Nowa cena:</label><br>
    <input type="text" id="price" name="price" value="{{ product.price }}"><br><br>
    <button type="submit">Aktualizuj</button>
</form>

<form method="post" action="{{ path('usun-produkt', {'id': product.id}) }}" onsubmit="return confirm('Czy na pewno chcesz usunąć ten produkt?');">
    <button type="submit">Usuń</button>
</form>
{% endblock %}
